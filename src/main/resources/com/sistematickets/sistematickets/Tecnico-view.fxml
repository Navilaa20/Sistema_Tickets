<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.sistematickets.sistematickets.TecnicoController">
    <children>
        <VBox spacing="10.0" padding="Insets(10,10,10,10)">
            <children>
                <VBox spacing="10.0" padding="Insets(10,10,10,10)">
                    <children>
                        <Label text="Nombre del Técnico:" />
                        <Label fx:id="lblNombre" text="Nombre" />
                    </children>
                </VBox>
                <TableView fx:id="tableTickets" prefHeight="200.0">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
                        <TableColumn fx:id="colTitulo" text="Título" prefWidth="150.0" />
                        <TableColumn fx:id="colPrioridad" text="Prioridad" prefWidth="100.0" />
                        <TableColumn fx:id="colDepartamento" text="Departamento" prefWidth="100.0" />
                        <TableColumn fx:id="colEstado" text="Estado" prefWidth="100.0" />
                    </columns>
                </TableView>
                <HBox spacing="10.0">
                    <children>
                        <Button fx:id="btnAsignar" text="Asignar" onAction="#asignarTicket" />
                        <Button fx:id="btnResolver" text="Resolver" onAction="#resolverTicket" />
                        <Button fx:id="btnCerrarSesion" text="Cerrar Sesión" onAction="#cerrarSesion" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
